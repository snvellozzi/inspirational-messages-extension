{
    "name": "Next Happiness",
    "version": "1.0",
    "description": "Get inspirational messages at any time.",
    "permissions": ["activeTab", "declarativeContent","storage"],
    "background": {
        "scripts": ["background.js"]    
      },

      "options_page": "options.html",

      "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon_image.png",  
            "32": "icon_image.png",
            "48": "icon_image.png",
            "128": "icon_image.png"
          }
      },
      
      "icons": {
        "16": "icon_image.png",
        "32": "icon_image.png",
        "48": "icon_image.png",
        "128": "icon_image.png"
      },

    "manifest_version": 2
  }